Perl -x "{0}" {"parameters"} ; exit#!/usr/local/bin/perlopen(SRC,"<" . $ARGV[0]) || die;open(DEFS,">" . $ARGV[1]) || die;open(RFIL,">" . $ARGV[2]) || die;open(DOC,">" . $ARGV[3]) || die;$str=5400;$gran=20;$elem=$gran+1;while (<SRC>){  if ($elem>=$gran)  {    if ($elem==$gran) {print RFIL '""}};' . "\n";}    $elem = 0;    $str += 200;    printf RFIL "resource 'STR#' (%d,purgeable) {{\n",$str;  }  chop;  split(/\t/);  printf DEFS "#define %s\t%d\n",$_[0],$str + ++$elem;  print RFIL '  "' . $_[1] . '",' . "\n";  if ($_[2] ne "") {printf DOC "%4d %s %s\n",$str+$elem,$_[0],$_[2];}}if ($elem && $elem<=$gran) {print RFIL '""}};' . "\n";}