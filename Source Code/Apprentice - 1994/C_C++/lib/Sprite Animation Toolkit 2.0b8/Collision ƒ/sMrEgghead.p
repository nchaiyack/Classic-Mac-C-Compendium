{ Player sprite for SATcollision }unit sMrEgghead;interface	uses		SAT;	var		MrEggheadFaces: array[0..3] of FacePtr;	procedure InitMrEgghead;	procedure SetupMrEgghead (me: SpritePtr);	procedure HandleMrEgghead (me: SpritePtr);implementation	procedure initMrEgghead;		var			i: integer;	begin		for i := 0 to 3 do			MrEggheadFaces[i] := GetFace(128 + i);	end;	procedure SetupMrEgghead (me: SpritePtr);	begin		me^.mode := 0;		me^.speed.h := 1;		me^.kind := 1; {"Friend" kind - positive so it can collide with apples, which have negative kind.}		SetRect(me^.hotRect, 0, 0, 32, 32);	end;	procedure HandleMrEgghead (me: SpritePtr);	begin		GetMouse(me^.position);		me^.mode := (me^.mode + 1) mod 4;		me^.face := MrEggheadFaces[me^.mode];	end;end.