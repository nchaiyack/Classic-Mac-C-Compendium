#!/bin/sh# Construct a segment of a Makefile for a program.## usage: putprogmf target "$(CFLAGS)" $(SRCS)# Check that we have enough arguments#case $# in0|1)	echo "usage: $0 target $(SRCS)" 1>&2; exit 2;;esac# Extract arguments; remaining arguments are source files#TARGET=$1; shiftputobjs "OBJS_$TARGET" $*# Construct rule to build target#echoecho "$TARGET: \$(OBJS_$TARGET) $(PORTOWNLIBS)"echo "	\$(CC) \$(CFLAGS) \$(OBJS_$TARGET) \$(LIBS) -o @$TARGET"echo "	mv @$TARGET $TARGET"#     ^^these are tabs!echoecho ".PRECIOUS: $TARGET"puttargets $*