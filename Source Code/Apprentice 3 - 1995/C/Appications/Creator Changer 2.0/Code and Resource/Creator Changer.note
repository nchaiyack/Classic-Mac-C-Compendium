void ForceFinderUpdate(FSSpec *pFSS)	{	OSErr			error;	CInfoPBRec		lCBlk;		if(pFSS->parID!=1) lCBlk.dirInfo.ioNamePtr=0L;	lCBlk.dirInfo.ioVRefNum=pFSS->vRefNum;			lCBlk.dirInfo.ioDrDirID=pFSS->parID;	lCBlk.dirInfo.ioFDirIndex=0;	lCBlk.dirInfo.ioCompletion=0;	error=PBGetCatInfoSync(&lCBlk);	if(!error)		{		GetDateTime(&lCBlk.dirInfo.ioDrMdDat);		lCBlk.dirInfo.ioDrDirID = pFSS->parID;		PBSetCatInfoSync(&lCBlk);		FlushVol(nil, pFSS->vRefNum);		}		}